{
  "id": "workflow-plugin",
  "name": "Workflow Engine",
  "version": "1.0.0-beta.1",
  "description": "Content workflow and approval system with customizable states, transitions, and review processes",
  "author": "SonicJS Team",
  "homepage": "https://sonicjs.com/plugins/workflow",
  "repository": "https://github.com/lane711/sonicjs-ai/tree/main/src/plugins/core-plugins/workflow-plugin",
  "license": "MIT",
  "category": "content",
  "tags": ["workflow", "approval", "review", "publishing", "collaboration"],
  "dependencies": [],
  "settings": {
    "requireApproval": {
      "type": "boolean",
      "label": "Require Approval",
      "description": "Require approval before publishing content",
      "default": true
    },
    "notifyReviewers": {
      "type": "boolean",
      "label": "Notify Reviewers",
      "description": "Send notifications to reviewers when content needs approval",
      "default": true
    }
  },
  "hooks": {
    "onActivate": "activate",
    "onDeactivate": "deactivate"
  },
  "routes": [],
  "permissions": {
    "workflow:manage": "Manage workflow settings",
    "workflow:approve": "Approve content"
  }
}
