{
  "name": "sonicjs-ai",
  "version": "2.0.0-alpha.8",
  "private": true,
  "workspaces": [
    "packages/*",
    "www"
  ],
  "scripts": {
    "dev": "npm run plugins:generate && wrangler dev 2>&1 | grep -v '/admin/dashboard/api/metrics'",
    "dev:www": "npm run dev --workspace=www",
    "prebuild": "npm run plugins:generate",
    "build": "tsc && wrangler deploy --dry-run",
    "build:www": "npm run build --workspace=www",
    "build:core": "npm run build --workspace=@sonicjs-cms/core",
    "predeploy": "npm test && npm run build",
    "deploy": "wrangler deploy",
    "deploy:www": "npm run deploy --workspace=www",
    "test": "vitest --run",
    "test:cov": "vitest --run --coverage",
    "test:cov:watch": "vitest --watch --coverage",
    "test:cov:ui": "vitest --run --coverage --ui",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply DB --local",
    "db:migrate:prod": "wrangler d1 migrations apply DB --env production",
    "db:studio": "drizzle-kit studio",
    "plugins:generate": "node packages/scripts/generate-plugin-registry.mjs",
    "plugins:watch": "nodemon --watch 'src/plugins/**/manifest.json' --exec 'npm run plugins:generate'",
    "prepare": "husky",
    "type-check": "tsc --noEmit",
    "lint": "npm run type-check"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@hono/zod-openapi": "^0.19.8",
    "@hono/zod-validator": "^0.7.0",
    "@libsql/client": "^0.15.9",
    "@sonicjs-cms/core": "^2.0.1",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.31.2",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "highlight.js": "^11.11.1",
    "hono": "4.10.1",
    "marked": "^15.0.12",
    "motion": "^12.23.22",
    "semver": "^7.7.2",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250620.0",
    "@playwright/test": "^1.53.1",
    "@types/node": "^20.19.1",
    "@types/semver": "^7.7.0",
    "@vitest/coverage-v8": "^2.1.9",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "playwright": "^1.53.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8",
    "wrangler": "^4.20.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsc --noEmit"
    ]
  }
}
