{
  "name": "sonicjs-ai",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "dev:frontend": "vite",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "build": "tsc && wrangler deploy --dry-run",
    "build:frontend": "vite build",
    "predeploy": "npm test && npm run build",
    "deploy": "wrangler deploy",
    "test": "vitest --run",
    "test:cov": "vitest --run --coverage",
    "test:cov:watch": "vitest --watch --coverage",
    "test:cov:ui": "vitest --run --coverage --ui",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply DB --local",
    "db:migrate:prod": "wrangler d1 migrations apply DB --env production",
    "db:studio": "drizzle-kit studio",
    "sonicjs": "tsx src/cli/index.ts"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@hono/zod-openapi": "^0.19.8",
    "@hono/zod-validator": "^0.7.0",
    "@libsql/client": "^0.15.9",
    "@tanstack/react-query": "^5.90.2",
    "axios": "^1.12.2",
    "clsx": "^2.1.1",
    "commander": "^14.0.0",
    "date-fns": "^4.1.0",
    "drizzle-kit": "^0.31.2",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "highlight.js": "^11.11.1",
    "hono": "^4.7.3",
    "marked": "^15.0.12",
    "motion": "^12.23.22",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.63.0",
    "react-router-dom": "^7.9.3",
    "semver": "^7.7.2",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250620.0",
    "@playwright/test": "^1.53.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.1",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@types/semver": "^7.7.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^2.1.9",
    "concurrently": "^9.2.1",
    "playwright": "^1.53.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^5.4.20",
    "vitest": "^2.1.8",
    "wrangler": "^4.20.5"
  }
}
