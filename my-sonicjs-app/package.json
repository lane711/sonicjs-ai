{
  "name": "my-sonicjs-app",
  "version": "0.1.0",
  "private": true,
  "description": "A SonicJS headless CMS application",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev 2>&1 | grep -v '\\[wrangler:inf\\]'",
    "deploy": "wrangler deploy",
    "db:migrate": "wrangler d1 migrations apply DB",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "db:studio": "drizzle-kit studio",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "update": "npm install @sonicjs-cms/core@latest --save",
    "update:beta": "npm install @sonicjs-cms/core@beta --save",
    "seed": "tsx scripts/seed-admin.ts"
  },
  "dependencies": {
    "@sonicjs-cms/core": "link:../packages/core"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250620.0",
    "@types/node": "^20.19.1",
    "drizzle-kit": "^0.30.0",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.3",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8",
    "wrangler": "^3.110.0",
    "zod": "^3.25.67"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
