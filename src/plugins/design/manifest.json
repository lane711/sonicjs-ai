{
  "id": "design",
  "name": "Design System",
  "version": "1.0.0-beta.1",
  "description": "Design system management including themes, components, and UI customization. Provides a visual interface for managing design tokens, typography, colors, and component library.",
  "author": "SonicJS",
  "homepage": "https://sonicjs.com/plugins/design",
  "repository": "https://github.com/lane711/sonicjs-ai/tree/main/src/plugins/design",
  "license": "MIT",
  "category": "ui",
  "tags": ["design", "ui", "themes", "components", "customization"],
  "dependencies": [],
  "settings": {
    "defaultTheme": {
      "type": "string",
      "label": "Default Theme",
      "description": "Default theme to use for the admin interface",
      "default": "dark",
      "options": ["light", "dark", "auto"]
    },
    "customCSS": {
      "type": "boolean",
      "label": "Enable Custom CSS",
      "description": "Allow custom CSS overrides",
      "default": false
    }
  },
  "hooks": {
    "onActivate": "activate",
    "onDeactivate": "deactivate"
  },
  "routes": [
    {
      "path": "/admin/design",
      "method": "GET",
      "handler": "getDesignPage",
      "description": "Get design system management page"
    }
  ],
  "permissions": {
    "design.view": "View design system",
    "design.edit": "Edit design settings"
  },
  "adminMenu": {
    "label": "Design",
    "icon": "palette",
    "path": "/admin/design",
    "order": 80
  }
}
