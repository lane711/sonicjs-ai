{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "noEmitOnError": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["@cloudflare/workers-types", "vitest/globals"],
    "paths": {
      "@/*": ["./src/*"],
      "@sonicjs-cms/core": ["./packages/core/src/index.ts"],
      "@sonicjs-cms/core/*": ["./packages/core/src/*"],
      "@sonicjs-cms/templates": ["./packages/templates/src/index.ts"],
      "@sonicjs-cms/templates/*": ["./packages/templates/src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "packages",
    "dist",
    "src/utils/api-generator.ts",
    "src/utils/openapi-generator.ts",
    "src/content/models.ts",
    "src/content/rich-text.ts",
    "src/content/versioning.ts",
    "src/routes/admin-content.ts",
    "src/components/catalyst/**/*.tsx",
    "src/plugins/available/email-templates-plugin/**/*"
  ]
}